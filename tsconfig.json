{
	"compilerOptions": {
		"target": "es6",
		"module": "es6",
		"moduleResolution": "node",
		"declaration": false,
		"strict": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"noLib": false,
		"allowJs": true,
		"suppressImplicitAnyIndexErrors": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"baseUrl": "./src/"
	},
	"include": [
		"./src/**/*"
	]
}